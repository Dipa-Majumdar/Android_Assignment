<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="curcon.promact.com.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="curcon.promact.com.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">


        <LinearLayout
            android:id="@+id/First_layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linear_layout_id1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Bahraini Dinar"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Indian Rupees"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="US Dollar"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Malaysian Ringgit"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Russian Ruble"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Hungarian Forint"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Japanese Yen"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Swiss Franc"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/BDT"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"

                    android:gravity="left"
                    android:hint="Enter Amount/Result"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/INR"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:hint="Enter Amount/Result"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/US"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:textColorHint="@android:color/black"
                    android:hint="Enter Amount/Result"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/malaysian"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:textColorHint="@android:color/black"
                    android:hint="Enter Amount/Result"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/russian"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:hint="Enter Amount/Result"
                    android:textColorHint="@android:color/black"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/hungarian"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:hint="Enter Amount/Result"
                    android:textColorHint="@android:color/black"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/japan"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:hint="Enter Amount/Result"
                    android:textColorHint="@android:color/black"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/france"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:textColorHint="@android:color/black"
                    android:gravity="left"
                    android:hint="Enter Amount/Result"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/submit"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit1"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click1"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit2"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click2"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit3"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click3"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit4"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click4"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit5"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click5"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit6"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click6"
                    android:src="@drawable/ic_action_convert" />
                <ImageButton
                    android:id="@+id/submit7"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:onClick="click7"
                    android:src="@drawable/ic_action_convert" />


            </LinearLayout>
        </LinearLayout>


</RelativeLayout>
</ScrollView>
</RelativeLayout>
